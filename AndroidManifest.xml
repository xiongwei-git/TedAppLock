<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ted.applock"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk
            android:targetSdkVersion="19"
            android:minSdkVersion="16"/>
    <application android:theme="@style/BaseTheme"
            android:label="@string/app_name" android:icon="@drawable/ic_launcher">

        <activity android:theme="@style/SplashTheme"
                  android:label="@string/app_name"
                  android:name=".activity.SplashActivity"
                  android:excludeFromRecents="true"
                  android:launchMode="singleInstance"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activity.ConfimPwdActivity"
                android:theme="@style/NoTitleTranslucentTheme" />

        <activity
                android:name=".activity.SplashPatternActivity"
                android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
                android:theme="@style/Alp.42447968.Theme.Light" />
        <activity android:name=".activity.MainActivity"
                  android:label="@string/app_name">
        </activity>
    </application>
</manifest>
